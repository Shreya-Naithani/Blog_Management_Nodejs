    <h1 style="display:flex;justify-content: center;"> Admin Login</h1>
    <div class="center" style="display:flex;justify-content: center;border:2px solid black;">
    <%
    if(typeof message !=="undefined"){
        %>
        <p style="color:red;"><%= message %></p>
        <% 
    }
     %>
