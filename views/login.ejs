                <P>Email:</P>
<input style="width:110%" type="email" name="email" placeholder="Enter Email"required><br>
            </div>
            <br>
        </div>
        <div class="row mt-3">
            <div class="class-sm-12">
                <P>Password:</P>
<input  style="width:110%" type="password" name="password" placeholder="Enter password"required><br>

            </div>
        </div>
        <div class="row mt-3">
            <div class="class-sm-12">

<input type="Submit" class="btn btn-secondary" value="login">
            </div>
        </div>
    </form>
</div>
    <a  style="display:flex;justify-content: center;" href="/forget-password">Forget Password</a>

</div>

